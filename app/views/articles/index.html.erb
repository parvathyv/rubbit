<h1>Articles</h1>

<% unless current_user.blank? %>
  <% if current_user %>
    <%= image_tag(current_user.profile_photo) %>
    <% end %>
<% end %>

<%= paginate @articles %>

  <ul>
    <% @articles.each do |article| %>
      <li><%= link_to article.name, article_path(article) %></li>
      <li>Article votes: <%= article.votes.sum(:vote_tally) %></li>
   <% end %>
 </ul>
      <h4><%= link_to "Add new article", new_article_path %></h4>
