
<div id="new-container">
<%= form_for(@article) do |f| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= "#{@article.errors.count} prevented the article from being saved" %></h2>
      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Title:<br />
    <%= f.text_field :name %>
  </div>

<div class="field">
    URL:<br />
    <%= f.text_field :url %>
  </div>

  <div class="field">
    Description:<br />
    <%= f.text_field :description %>
  </div>

  <div class="field">
    Category:
    <%= f.select( :category_id, Category.all.map {|c| [c.topic, c.id]}) %>
  </div>

  <div class="actions">
  <%= f.submit "Submit", :class => 'button round' %>
  </div>

<% end %>	
</div>