<%= @article.name %>
<%= @article.description %>
<%= @article.url %>

<%= form_for [@article, @review] do |f| %>

  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_field :body %>
  </div>

  <div class="actions">
    <%= f.submit "Add Review" %>
  </div>

<% end %>

<% @reviews.each do |review| %>

  <h4><%= review.body %></h4>
  <%= link_to "Edit Review", edit_article_review_path(review) %>
<% end %>
